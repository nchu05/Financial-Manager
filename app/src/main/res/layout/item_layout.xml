<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/transaction_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="10sp"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/category_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3"
         />

    <TextView
        android:id="@+id/category_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/transaction_tv"
        app:layout_constraintEnd_toStartOf="@+id/cost_tv"
        app:layout_constraintTop_toTopOf="@id/transaction_tv"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_tv"
        app:layout_constraintWidth_percent="0.4" />


    <TextView
        android:id="@+id/cost_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/category_tv"
        app:layout_constraintTop_toTopOf="@id/transaction_tv"
        app:layout_constraintWidth_percent="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>